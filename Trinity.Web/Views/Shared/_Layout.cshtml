<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trinity College</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container-fluid">
        <nav>
            @RenderPage("Components/_NavBar.cshtml")
            <br />
        </nav>

        <div>
            <div class="row">
                <div class="col-9">
                    @RenderBody()
                </div>
                <div class="col-3">
                    <p>lorem ipsum                 </p>
                </div>
            </div>
        </div>



        <footer>
            @RenderPage("Components/_Footer.cshtml")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
